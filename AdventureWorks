select * from dbo.DimCustomer

select * from dbo.FactInternetSales

-- Select the  sales amount and the customer key whith the order date in order asc
-- 

select orderdate, salesamount, customerkey 
from dbo.FactInternetSales
order by OrderDate asc

-- select the first name, last name and email adress with the sale order number and sale amount

select dc.firstname, dc.lastname,dc.emailaddress, fi.salesordernumber, fi.salesamount
from FactInternetSales fi
join dbo.dimcustomer dc
on fi.CustomerKey = dc.CustomerKey

-- ordenados por sales amount de mayor a menor 

select dc.firstname, dc.lastname,dc.emailaddress, fi.salesordernumber, fi.salesamount
from FactInternetSales fi
join dbo.dimcustomer dc
on fi.CustomerKey = dc.CustomerKey
order by salesamount desc

-- select the product key with the english product name and color 

select productkey, englishproductname, color
from dbo.DimProduct

-- select all the colors

select distinct color 
from dbo.DimProduct

-- select all the sales amount  from products red 

select dp.color, fi.salesamount
from FactInternetSales fi
join dbo.DimProduct dp
on dp.ProductKey = fi.ProductKey
where dp.Color = 'Red'

-- select all the sales amount  from products red , white or black

select dp.color, fi.salesamount
from FactInternetSales fi
join dbo.DimProduct dp
on dp.ProductKey = fi.ProductKey
where dp.Color in('Red','White', 'Black')

